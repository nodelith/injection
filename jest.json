{
  "moduleFileExtensions": [ "ts", "js" ],
  "maxWorkers": 1,
  "rootDir": "./src",
  "testMatch": ["**/*.test.ts"],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "coverageDirectory": "<rootDir>/../coverage",
  "coverageReporters": ["text", "lcov"],
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/index.ts"
  ]
}
